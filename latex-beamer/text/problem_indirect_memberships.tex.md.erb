      \begin{itemize}
        \item Assuming a `Group` model that `has_many :direct_members`.

          \begin{ruby}
            Group.find_by(name: "Jeder").direct_members
              # => []
          \end{ruby}

        \item We need indirect memberships:

          \begin{ruby}
            Group.find_by(name: "Jeder").members
              # => [Max, Lena, Hans, Gretel, Peter]
          \end{ruby}

      \end{itemize}

